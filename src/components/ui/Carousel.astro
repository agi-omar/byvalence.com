---
import { twMerge } from 'tailwind-merge';
import type { Carousel } from '~/types';
import Button from './Button.astro';
import { Icon } from 'astro-icon/components';

const { items = [], defaultIcon = '', classes = {} } = Astro.props as Carousel;

const {
  container: containerClass = '',
  panel: panelClass = '',
  title: titleClass = '',
  description: descriptionClass = '',
  itemnumber: itemnumberClass = '',
  icon: defaultIconClass = 'text-primary',
  action: actionClass = '',
} = classes;
---

{
  items && (
    <div
      class={twMerge(
        `flex flex-row mx-auto gap-4 md:gap-y-12`,
        containerClass
      )} dir="rtl"
    >
      {items.map(({ title, description, itemnumber, icon, callToAction, classes: itemClasses = {} }) => (
        <div>
          <div class={twMerge('flex flex-col max-w-md', panelClass, itemClasses?.panel)}>
            <div class="flex justify-start">
              {(icon || defaultIcon) && (
                <Icon
                  name={icon || defaultIcon}
                  class={twMerge('w-7 h-7 mr-2 rtl:mr-0 rtl:ml-2', defaultIconClass, itemClasses?.icon)}
                />
              )}
              {itemnumber && <span class={twMerge('text-2xl font-semibold', itemnumberClass, itemClasses?.title)}>{itemnumber}</span>}
            </div>
            <div class="mt-0.5">
              {title && <h3 class={twMerge('text-5xl font-serif font-semibold', titleClass, itemClasses?.title)}>{title}</h3>}
              {description && (
                <p
                  class={twMerge(`${title ? 'mt-3' : ''} text-lg text-muted`, descriptionClass, itemClasses?.description)}
                  set:html={description}
                />
              )}
              {callToAction && (
                <div
                  class={twMerge(
                    `${title || description ? 'mt-3' : ''}`,
                    actionClass,
                    itemClasses?.actionClass
                  )}
                >
                  <Button variant="link" {...callToAction} />
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  )
}
